    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Operator",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env":{
                "OPERATOR_NAMESPACE": "opendatahub-operator-system",
                "DEFAULT_MANIFESTS_PATH": "./opt/manifest"
            },
            "args": ["--log-mode=devel"],
            "cwd": "${workspaceFolder}",
            "trace": "verbose",
            "logOutput": "dap",
            "showLog": true,
            "stopOnEntry": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/home/ykaliuta/work/RHOAI/opendatahub-operator"
                }
            ]
        }
    ]
}