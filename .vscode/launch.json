    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Operator",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env":{
                "OPERATOR_NAMESPACE": "opendatahub-operator-system",
                "DEFAULT_MANIFESTS_PATH": "./opt/manifests"
            },
            "args": ["--log-mode=devel"],
            "cwd": "${workspaceFolder}",
            //"trace": "verbose",
            //"logOutput": "dap",
            //"showLog": true,
            //"stopOnEntry": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/home/ykaliuta/work/RHOAI/opendatahub-operator"
                }
            ]
        },
        {
            "name": "Debug Operator Prod",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {
                "OPERATOR_NAMESPACE": "opendatahub-operator-system",
                "DEFAULT_MANIFESTS_PATH": "./opt/manifests"
            },
            "args": [
                "--log-mode=prod"
            ],
            "cwd": "${workspaceFolder}",
            //"trace": "verbose",
            //"logOutput": "dap",
            //"showLog": true,
            //"stopOnEntry": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/home/ykaliuta/work/RHOAI/opendatahub-operator"
                }
            ]
        },
        {
            "name": "Debug Operator With Args",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {
                "OPERATOR_NAMESPACE": "opendatahub-operator-system",
                "DEFAULT_MANIFESTS_PATH": "./opt/manifests"
            },
            "args": [
                "${input:odhArgs}"
            ],
            "cwd": "${workspaceFolder}",
            //"trace": "verbose",
            //"logOutput": "dap",
            //"showLog": true,
            //"stopOnEntry": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/home/ykaliuta/work/RHOAI/opendatahub-operator"
                }
            ]
        }
    ],
    "inputs":[
        {
            "id": "odhArgs",
            "type": "promptString",
            "description": "Enter arguments for the operator",
            "default": "--log-mode=devel"
        }
    ]
}